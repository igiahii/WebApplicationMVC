@model IEnumerable<Category>
@{
    ViewData["Title"] = "Category";
}


<div class="container p-3">
    <partial name="_Notification"/>
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-controller="Category" asp-action="Create"> <i class="bi bi-clipboard-plus me-1"></i>Create Categories</a>
        </div>

    </div>



    <table class="table table-bordered table-striped table-hover table-secondary w-100 mt-3">
        <thead>
            <tr>
                <th>
                    Category Name
                </th>
                <th>
                    Display order
                </th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr >
                    <td class="w-50">
                        @obj.Name
                    </td>
                    <td class="w-10">
                        @obj.DisplayOrder
                    </td>
                    <td class="align-middle">
                        <div class="btn-group w-75 ps-2 " role="group">
                            <a class="btn btn-info mx-2" asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id"><i class="bi bi-pencil-square"></i>&ensp;Edit</a>
                        </div>
                    </td>
                    <td>
                        <div class="btn-group w-75 ps-2 " role="group">
                            <a class="btn btn-danger mx-2" asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id"><i class="bi bi-trash3"></i>&ensp;Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>
